<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pipitliandani.android.pipitliandani_1202154363_modul2.DetailMenu">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        android:titleTextColor="#ffffff"/>
    <TextView
        android:id="@+id/tittle"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="TextView"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imgDetail"
        android:layout_width="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/images" />

    <TextView
        android:id="@+id/labelHarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Harga"
        android:layout_marginTop="20sp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="500000"
        android:layout_marginTop="5sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/komposisi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Komposisi"
        android:layout_marginTop="30sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Terbuat dari perasaan yang paling dalam."
        android:padding="10sp"/>


</LinearLayout>
